/* pages/home/home.wxss */
@import "/templates/recommendItem/recommendItem.wxss"
@import "/templates/floorItem/floorItem.wxss"
@import "/templates/goodsItem/goodsItem.wxss"
/*搜索*/
page{
	background-color: #f2f2f2;
}
.search {
  background-color: #f2f2f2;
  height: 80rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
}
.search-img {
  margin: auto 0 auto 20rpx;
}
.search input {
  height: 100%;
  width: 550rpx;
  margin-left: 20px;
  font-size: 28rpx;
}
.search-btn{
	margin: auto 5rpx;
}
.placeholder {
  font-size: 14px;
  color: #d1d1d1;
  margin-left: 20rpx;
}

/*轮播*/
.swiper{
	width: 100%;
}
.posts-swiper{
	width: 100%;
	/*height: 0;
	padding-bottom: 44.38%;*/
	/*height: 334rpx;*/
}
.posts-image{
  width: 100%;
  /*height: 100%;*/
}

/*分类*/
.category{
	display: flex;
	justify-content: space-around;
	margin: 14rpx 10rpx 0;
	background-color: #fff;
	border-radius: 10rpx;
}
.category-item{
	width: 16%;
	padding: 20rpx 0;
	text-align: center;
}
.category-image{
	width: 100%;
}
.category-text{
	font-size: 28rpx;
}

/*广告*/
.advert{
	width: 100%;
	margin: 14rpx 0;
}
.advert-image{
	width: 100%;
}

/*推荐*/
.recommend{
	background-color: #fff;
	padding-bottom: 10rpx;
}
.recommend-title{
	height: 45rpx;
	line-height: 45rpx;
	font-size: 26rpx;
	padding: 0 0 10rpx 10rpx;
	color:#e5017d;
	border-bottom: 1rpx solid #eee;
}
.recommend-goods{
	width: 100%;
}
.container{
	white-space: nowrap;
	padding: 0;
}

/*floor*/
.floor{
	margin-top: 10rpx;
}

/*热卖*/
.hotGoods{
	margin-top: 10rpx;
	padding: 0 10rpx;
}
.hotGoods-title{
	height: 60rpx;
	line-height: 60rpx;
	text-align: center;
	font-size: 28rpx;
	color: #c84d2c;
}
