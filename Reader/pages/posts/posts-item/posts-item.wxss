/*文章样式*/
.post-container{
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  background: #fff;
  border-top: 1px solid #ededed;
  border-bottom: 1px solid #ededed;
  padding-bottom: 10rpx;
}
.post-author-data{
  margin: 10rpx 10rpx 20rpx 10rpx;
  display: flex;
  align-items: center;
}
.post-avatar{
  width:60rpx;
  height: 60rpx;
  /* vertical-align: middle; */
}
.post-data{
  margin-left: 20rpx;
  font-size: 26rpx;
}
.post-title{
  font-size: 34rpx;
  font-weight: 600;
  margin: 0 0 10px 10px;
  color: #333;
}
.post-image{
  width: 100%;
  height: 340rpx;
  margin-bottom: 15px;
} 
.post-content{
  font-size: 28rpx;
  color: #666;
  text-indent: 50rpx;
  letter-spacing: 2rpx;
  margin: 0 20rpx 20rpx;
}
.post-like{
  display: flex;
  align-items: center;
  font-size: 26rpx;
  margin: 0 20rpx;
  padding-top: 10rpx;
  border-top: 2px solid #f4f4f4;
}
.post-like-image{
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}
.post-like-font{
  margin-right: 40rpx;
}
